<core:FragmentDefinition 
	xmlns="sap.m" 
	xmlns:core="sap.ui.core">
	<Dialog title="Confirm" type="Message">
		<content>
			<Text text="{i18n>confirmQuestion}"></Text>
		</content>
		<beginButton>
			<Button text="{i18n>yes}" press=".onConfirm"/>
		</beginButton>
		<endButton>
			<Button text="{i18n>no}" press=".onCloseDialog"/>
		</endButton>
	</Dialog>
</core:FragmentDefinition>